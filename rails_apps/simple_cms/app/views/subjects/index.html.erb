<% @page_title = "Subjects" %>

<div class="subjects index"> 
	<center>
	<h2>Subjecsts</h2>

	<%= link_to("Add new Subject", {:action => 'new'}, :class => 'action new') %>
	<div><%= pluralize(@subjects.size, 'subject') %> found </div> 

	<table class="listing" summary="Subject list">
		<tr class="header">
			<th>&nbsp;</th>
			<th>Subject</th>
			<th>Visible</th>
			<th>Pages</th>
			<th>Actions</th>
		</tr>

		<% @subjects.each do |subject| %>
		<tr class = "<%= cycle('odd', 'even') %>">
			<td> <%= subject.position %></td>
			<td> <%= subject.name %></td>
			<td style="text-align: center;"><%= status_tag(subject.visible) %></td>
			<td style="text-align: center;"><%= subject.pages.size %></td>
			<td class="actions">
				<%= link_to("Show", {:action => 'show', :id => subject.id}, :class => 'action show') %>
				<%= link_to("Edit", {:action => 'edit', :id => subject.id}, :class => 'action edit') %>
				<%= link_to("Delete", {:action =>'delete', :id => subject.id}, :class => 'action delete') %>
			</td>
		</tr>
		<% end %>
	</table>
</div>
</center>