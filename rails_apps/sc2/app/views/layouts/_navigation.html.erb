<% subjects ||= [] %>
<ul>
	<% subjects.each do |subject| %>
	<li>
		<%= subject.name %>
		<ul>
			<% subject.pages.where(:visible => true).order("position ASC").each do |page| %>
			<li><%= link_to_unless_current(page.name, {:action => 'show', :permalink => page.permalink}) %></li>
			<% end %>
		</ul>
	</li>
	<% end %>
</ul>
